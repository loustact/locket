    "license": "MPL-2.0",
    "notes": [
        "Check 'Zen Profile Manager' for the 'Scoop' profile",
        "Also, make sure to turn off the browser's auto-update"
    ],
    "architecture": {
        "64bit": {
            "url": "https://github.com/zen-browser/desktop/releases/download/1.0.2-b.5/zen.installer.exe#/dl.7z",
            "hash": "a841904c16ae84bd05e048a86c93693062f75981a11d6a23ebf34b72791596ce"
        },
        "arm64": {
            "url": "https://github.com/zen-browser/desktop/releases/download/1.0.2-b.5/zen.installer-arm64.exe#/dl.7z",
            "hash": "82d2cd999170e7efe29fe498059e297d6428b6d83ac657c9bd33eea0f133539b"
        }
    },
    "bin": [
        "zen.exe",
        "zen"
    ],
    "pre_install": [
        "$extractDir = \"$dir\"",
        "if (Test-Path \"$extractDir\\core\") {",
        "    # Move all files in the core folder to the unzipped directory",
        "    Move-Item -Path \"$extractDir\\core\\*\" -Destination \"$extractDir\" -Force",
        "    # Delete the core folder",
        "    Remove-Item -Path \"$extractDir\\core\" -Recurse -Force",
        "}",
        "$bucket=(scoop bucket list | where-Object { $_.Source -match 'locket'})[0].Name",
        "Import-Module $(Join-Path $(Find-BucketDirectory -Root -Name $bucket) scripts/AirUtils.psm1)",
        "RedirectDirectory \"$env:APPDATA\\zen\" \"$persist_dir\\Roaming\\zen\"",
        "RedirectDirectory \"$env:LOCALAPPDATA\\zen\" \"$persist_dir\\Local\\zen\"",
        "Remove-Module -Name AirUtils"
    ],
    "uninstaller": {
        "script": [
            "if ($cmd -eq 'uninstall') {",
            "    $bucket=(scoop bucket list | where-Object { $_.Source -match 'locket'})[0].Name",
            "    Import-Module $(Join-Path $(Find-BucketDirectory -Root -Name $bucket) scripts/AirUtils.psm1)",
            "    RemoveJunction \"$env:APPDATA\\zen\"",
            "    RemoveJunction \"$env:LOCALAPPDATA\\zen\"",
            "    Remove-Module -Name AirUtils",
            "}"
        ]
    },
    "shortcuts": [
        [
            "zen.exe",
            "Zen Browser"
        ],
        [
            "zen.exe",
            "Zen Profile Manager",
            "-P"
        ],
        [
            "private_browsing.exe",
            "Zen Private Browsing"
        ]
    ],
    "checkver": {
        "github": "https://github.com/zen-browser/desktop"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/zen-browser/desktop/releases/download/$version/zen.installer.exe#/dl.7z"
            },
            "arm64": {
                "url": "https://github.com/zen-browser/desktop/releases/download/$version/zen.installer-arm64.exe#/dl.7z"
            }
        }
    }
}
